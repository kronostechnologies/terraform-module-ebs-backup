variable "lambda_aws_iam_role_name"     { default = "create-snapshot" description = "Unique name applied to aws_iam_role of the lambda function. The role name is always prefixed with 'ebs-backup-'. Use this to avoid name conflict." }
variable "lambda_function_name"         { default = "lambda"          description = "Unique name for the lambda function. The function name is always prefixed with 'ebs-backup-'. Use this to avoid name conflict." }
variable "lambda_cloudwatch_event_name" { default = "rule"            description = "Unique name for the cloudwatch event rule ressource. The cloudwatch event name is always prefixed with 'ebs-backup-'. Use this to avoid name conflict." }
variable "lambda_schedule_expression"   { default = "rate(4 hours)"   description = "The lambda schedule expression" }
variable "lambda_volume_tag_namespace"  { default = "Prod"            description = "Tag name to look for when filtering ec2 instances. The tag name is always prefixed with 'EbsBackup_TakeSnapshot_'. Use this to namespace your volume." }